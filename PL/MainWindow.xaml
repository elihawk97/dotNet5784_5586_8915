<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="460" Width="800">

    <!-- Main container grid with 4 rows -->
    <Grid>
        <!-- Defining four rows of equal height -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Welcome message section -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock  HorizontalAlignment="Center" VerticalAlignment="Center"
                   Text="Welcome to the Engineering Management System"
                   FontFamily="Arial" FontSize="30" FontWeight="Bold" FontStyle="Italic"
                   Foreground="DarkBlue" TextWrapping="Wrap" TextAlignment="Center" Padding="10"/>
        <TextBlock  VerticalAlignment="Center" HorizontalAlignment="Center"
           Text="Avi Soclof and Eli Hawk"
           FontFamily="Arial" FontSize="20" FontWeight="Bold" FontStyle="Italic"
           Foreground="Black" TextWrapping="Wrap" TextAlignment="Center" Padding="10"/>
        </StackPanel>

        <!-- Initialize Data Button (hidden example button commented out) -->
        <!--<Button Content="Handle Tasks" HorizontalAlignment="Left" Margin="197,209,0,0" VerticalAlignment="Top" Click="btnTask_Click"/>-->
        <Button Grid.Row="1" Content="Initialize Data" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="100" Height="50" Click="InitializeData_Click"/>
        
        <!-- Handle Engineers Button -->
        <Button Grid.Row="2" Content="Handle Engineers" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="100" Height="50" Click="btnEngineer_Click"/>

        <!-- Footer message section -->
        <TextBlock Grid.Row="3"  VerticalAlignment="Center" HorizontalAlignment="Center"
     Text="Working Together For A Better Future"
     FontFamily="Arial" FontSize="24" FontWeight="Bold" FontStyle="Italic"
     Foreground="Black" TextWrapping="Wrap" TextAlignment="Center"/>
    </Grid>
</Window>
